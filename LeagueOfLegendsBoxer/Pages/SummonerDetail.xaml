<Page x:Class="LeagueOfLegendsBoxer.Pages.SummonerDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfLegendsBoxer.Pages"
      mc:Ignorable="d" 
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:usercontrol="clr-namespace:LeagueOfLegendsBoxer.UserControls"
      xmlns:convert="clr-namespace:LeagueOfLegendsBoxer.Converts"
      FontFamily="微软雅黑"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="对局详情">
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadCommandAsync}"></behaviors:InvokeCommandAction>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Page.Resources>
        <convert:WinColorBrushConverter x:Key="WinColorBrushConverter"></convert:WinColorBrushConverter>
        <convert:WinTextConverter x:Key="WinTextConverter"></convert:WinTextConverter>
        <convert:BoolColorBrushConverter x:Key="BoolColorBrushConverter"></convert:BoolColorBrushConverter>
        <convert:BoolColorBrushReConverter x:Key="BoolColorBrushReConverter"></convert:BoolColorBrushReConverter>
        <ContextMenu x:Key="menu" 
                     DataContext="{Binding PlacementTarget.Tag,RelativeSource={RelativeSource Self}}"
                     BorderThickness="0" 
                     FontSize="16" Background="{DynamicResource DefaultBackgroundColor}" Foreground="{DynamicResource DefaultFontColor}">
            <ContextMenu.Resources>
                <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemBaseStyle}">
                    <Setter Property="BorderThickness" Value="0"></Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DefaultCardBackgroundColor}"></Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ContextMenu.Resources>
            <MenuItem Header="复制" Foreground="{DynamicResource DefaultFontColor}"
                      Command="{Binding CopyNameCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}, Path=PlacementTarget.DataContext}"></MenuItem>
            <MenuItem Header="拉黑" Foreground="{DynamicResource DefaultFontColor}"
                      Command="{Binding BlackAccountCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}, Path=PlacementTarget.DataContext}"></MenuItem>
        </ContextMenu>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <hc:Card Grid.Row="0" Margin="5" Grid.ColumnSpan="2" BorderThickness="0" Background="{DynamicResource DefaultCardBackgroundColor}" Foreground="{DynamicResource DefaultFontColor}">
            <StackPanel Orientation="Horizontal">
                <TextBox IsReadOnly="True" 
                         Background="Transparent"
                         Foreground="{DynamicResource DefaultFontColor}"
                         BorderThickness="0"
                         Height="50"
                         Text="{Binding Account.DisplayName,StringFormat={}召唤师名:{0}}" FontSize="16" Margin="10 0 0 0" VerticalAlignment="Center"></TextBox>
                <TextBlock Text="{Binding Account.Rank.RANKED_SOLO_5x5.CnTier,StringFormat={}单双段位:{0}}" FontSize="16" Margin="10 0 0 0" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Account.Rank.RANKED_SOLO_5x5.Division}" FontSize="16" Margin="2 0 0 0" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Account.Rank.RANKED_FLEX_SR.CnTier,StringFormat={}灵活段位:{0}}" FontSize="16" Margin="10 0 0 0" VerticalAlignment="Center"></TextBlock>
                <TextBlock Text="{Binding Account.Rank.RANKED_FLEX_SR.Division}" FontSize="16" Margin="2 0 0 0" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </hc:Card>
        <hc:Card BorderThickness="0" Effect="{DynamicResource EffectShadow2}" Grid.Row="1" Grid.Column="0" Margin="5"
                 Background="{DynamicResource DefaultCardBackgroundColor}" Foreground="{DynamicResource DefaultFontColor}">
            <GroupBox Header="最近100场对局" BorderThickness="0" FontSize="15" 
                      Style="{StaticResource GroupBoxOriginal}"
                      Background="{DynamicResource DefaultCardBackgroundColor}" Foreground="{DynamicResource DefaultFontColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0">
                        <ListBox ItemsSource="{Binding Records,UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.CanContentScroll="False"
                                 ScrollViewer.IsDeferredScrollingEnabled="True"
                                 PreviewMouseWheel="ListView_PreviewMouseWheel"
                                 SelectedItem="{Binding Record,UpdateSourceTrigger=PropertyChanged}">
                            <behaviors:Interaction.Triggers>
                                <behaviors:EventTrigger EventName="SelectionChanged">
                                    <behaviors:InvokeCommandAction Command="{Binding GameSelectionChangedCommandAsync}"></behaviors:InvokeCommandAction>
                                </behaviors:EventTrigger>
                            </behaviors:Interaction.Triggers>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Height" Value="80" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Border Background="Transparent" Cursor="Hand" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{StaticResource PrimaryBrush}">
                                                    <Grid Margin="0 5 5 5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                                            <ColumnDefinition Width="0.9*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <hc:Gravatar Grid.RowSpan="2" Width="50" Height="50" 
                                                                 ToolTip="{Binding Participants[0].ChampionName}"
                                                                 Source="{Binding Participants[0].ChampionImage}" />
                                                        <Canvas Margin="35 0 0 25" 
                                                                Grid.RowSpan="2" 
                                                                Width="50" Height="50" 
                                                                Visibility="{Binding IsSvp,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Boolean2VisibilityConverter}}"
                                                                Background="Transparent">
                                                            <usercontrol:SVP/>
                                                        </Canvas>
                                                        <Canvas Margin="35 0 0 25" 
                                                                Grid.RowSpan="2" 
                                                                Width="50" Height="50" 
                                                                Visibility="{Binding IsMvp,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Boolean2VisibilityConverter}}"
                                                                Background="Transparent">
                                                            <usercontrol:MVP/>
                                                        </Canvas>
                                                        <TextBlock Text="{Binding GameCreationString}" VerticalAlignment="Center"
                                                               FontSize="15" Grid.Column="2" Margin="0 5 0 0"></TextBlock>

                                                        <hc:Tag Content="{Binding CnQueue}" ShowCloseButton="False" VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            FontSize="13" Grid.Column="1" Margin="0 5 0 0"></hc:Tag>

                                                        <TextBlock Text="{Binding Participants[0].Stats.KDA}" 
                                                               VerticalAlignment="Center" FontSize="15" Grid.Row="1"
                                                               Grid.Column="1" ></TextBlock>

                                                        <TextBlock Text="{Binding Participants[0].Stats.Win,Converter={StaticResource WinTextConverter}}"
                                                               Grid.Column="3" VerticalAlignment="Center" Grid.Row="1"
                                                               FontSize="18" HorizontalAlignment="Left"
                                                               Foreground="{Binding Participants[0].Stats.Win,Converter={StaticResource WinColorBrushConverter}}"></TextBlock>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"></Setter>
                                            <Setter Property="BorderThickness" Value="1"></Setter>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="{DynamicResource DefaultFontColor}"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                    <hc:Pagination Foreground="{StaticResource PrimaryBrush}" 
                                   MaxPageCount="20"
                                   Grid.Row="1"
                                   PageIndex="{Binding PageIndex,UpdateSourceTrigger=PropertyChanged}" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0" Height="30" VerticalAlignment="Top">
                        <behaviors:Interaction.Triggers>
                            <behaviors:EventTrigger EventName="PageUpdated">
                                <behaviors:InvokeCommandAction Command="{Binding SelectPageCommandAsync}" PassEventArgsToCommand="True"></behaviors:InvokeCommandAction>
                            </behaviors:EventTrigger>
                        </behaviors:Interaction.Triggers>
                    </hc:Pagination>
                </Grid>
            </GroupBox>
        </hc:Card>

        <hc:Card BorderThickness="0" Background="{DynamicResource DefaultCardBackgroundColor}" 
                 Foreground="{DynamicResource DefaultFontColor}" Effect="{DynamicResource EffectShadow2}" Grid.Row="1" Grid.Column="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Margin="0 30 30 30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="日期" HorizontalAlignment="Center" FontSize="15" Foreground="#aaaaaa"/>
                    <TextBlock Text="类型" HorizontalAlignment="Center" Grid.Column="1" FontSize="15" Foreground="#aaaaaa"/>
                    <TextBlock Text="开始时间" HorizontalAlignment="Center" Grid.Column="2" FontSize="15" Foreground="#aaaaaa"/>

                    <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding Record.DetailRecord.GameCreationString}" FontSize="15"  Grid.Row="1"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Record.DetailRecord.CnQueue}" Grid.Column="1" Grid.Row="1" FontSize="15" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Record.DetailRecord.GameCreationTimeString}" Grid.Column="2"  Grid.Row="1" FontSize="15" />
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1" Margin="30 30 0 30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="人头" HorizontalAlignment="Center" FontSize="15" Foreground="#aaaaaa"/>
                    <TextBlock Text="时长" HorizontalAlignment="Center" Grid.Column="1" FontSize="15" Foreground="#aaaaaa"/>
                    <TextBlock Text="金钱" HorizontalAlignment="Center" Grid.Column="2" FontSize="15" Foreground="#aaaaaa"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Row="1">
                        <TextBlock Text="{Binding Record.DetailRecord.Team1Kills}" HorizontalAlignment="Center" FontSize="15" Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text="/" HorizontalAlignment="Center" FontSize="15" Foreground="#aaaaaa"/>
                        <TextBlock Text="{Binding Record.DetailRecord.Team2Kills}" HorizontalAlignment="Center" FontSize="15" Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>

                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Record.DetailRecord.GameMinutes,StringFormat={}{0}分钟}" Grid.Column="1" Grid.Row="1" FontSize="15" />
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Column="2"  Grid.Row="1">
                        <TextBlock Text="{Binding Record.DetailRecord.Team1GoldEarnedString}" HorizontalAlignment="Center" FontSize="15" Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text="/" HorizontalAlignment="Center" FontSize="15" Foreground="#aaaaaa"/>
                        <TextBlock Text="{Binding Record.DetailRecord.Team2GoldEarnedString}" HorizontalAlignment="Center" FontSize="15" Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </Grid>
                <ListBox ItemsSource="{Binding Record.LeftParticipants,UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"
                         Grid.Row="1" Grid.Column="0" Margin="10 0 0 0" Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Height" Value="80" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border Background="Transparent" BorderBrush="{StaticResource PrimaryBrush}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Item1.IsCurrentUser}" Value="True">
                                                            <Setter Property="BorderThickness" Value="1"></Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Item1.IsCurrentUser}" Value="False">
                                                            <Setter Property="BorderThickness" Value="0"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid Margin="0 5 5 5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"></ColumnDefinition>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="2*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="0.5*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <hc:Badge Grid.RowSpan="2" 
                                                          Grid.Column="0" BadgeMargin="0 -5 -5 0"
                                                          BorderThickness="0"
                                                          Grid.Row="0" Value="{Binding Item2.Stats.ChampLevel}" Style="{DynamicResource BadgeDanger}">
                                                    <Grid>
                                                        <hc:Gravatar Style="{StaticResource GravatarCircle}" Name="headimg"
                                                                     Width="55" Height="55" Source="{Binding Item2.ChampionImage}" />
                                                        <Canvas Margin="0 0 0 25" 
                                                                Grid.RowSpan="2" 
                                                                Width="55" Height="55" 
                                                                Visibility="{Binding Item1.IsSvp,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Boolean2VisibilityConverter}}">
                                                            <usercontrol:SVP/>
                                                        </Canvas>
                                                        <Canvas Margin="0 0 0 35" 
                                                                Grid.RowSpan="2" 
                                                                Width="75" Height="55" 
                                                                Visibility="{Binding Item1.IsMvp,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource Boolean2VisibilityConverter}}">
                                                            <usercontrol:MVP/>
                                                        </Canvas>
                                                        <Popup Focusable="False"
                                                               IsOpen="{Binding ElementName=headimg,Path=IsMouseOver,Mode=OneWay}"
                                                               PlacementTarget="{Binding ElementName=headimg}" 
                                                               Placement="Top" AllowsTransparency="True">
                                                            <Grid Width="300">
                                                                <Rectangle Fill="White" Margin="2" Opacity="0.9" RadiusY="2" RadiusX="2">
                                                                    <Rectangle.Effect>
                                                                        <DropShadowEffect Color="#eeeeee" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                                                    </Rectangle.Effect>
                                                                </Rectangle>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="90"></RowDefinition>
                                                                        <RowDefinition Height="*"></RowDefinition>
                                                                    </Grid.RowDefinitions>

                                                                    <hc:Gravatar Margin="0 10 10 10" Grid.Row="0" Grid.Column="0" Width="75" Height="75" Source="{Binding Item2.ChampionImage}" />
                                                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding Item1.Player.SummonerName}" FontSize="17" Foreground="Black"></TextBlock>
                                                                        <TextBlock Text="{Binding Item2.ChampionName}" FontSize="15" Margin="0 5 0 0" Foreground="Black"></TextBlock>
                                                                    </StackPanel>
                                                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                            <RowDefinition Height="*"></RowDefinition>
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                                        </Grid.ColumnDefinitions>

                                                                        <StackPanel Orientation="Horizontal" Margin="20 2 0 2">
                                                                            <TextBlock Text="杀敌：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.Kills}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="0" Grid.Column="1">
                                                                            <TextBlock Text="死亡：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.Deaths}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="20 2 0 2">
                                                                            <TextBlock Text="助攻：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.Assists}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="1" Grid.Column="1">
                                                                            <TextBlock Text="补兵：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TotalMinionsKilled}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="20 2 0 2">
                                                                            <TextBlock Text="金钱：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.GoldEarned}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="2" Grid.Column="1">
                                                                            <TextBlock Text="输出伤害：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TotalDamageDealt}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="20 2 0 2">
                                                                            <TextBlock Text="最大连杀：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.LargestKillingSpree}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="3" Grid.Column="1">
                                                                            <TextBlock Text="最大多杀：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.LargestMultiKill}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="20 2 0 2">
                                                                            <TextBlock Text="推塔：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TurretKills}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="4" Grid.Column="1">
                                                                            <TextBlock Text="兵营：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.WardsKilled}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="20 2 0 2">
                                                                            <TextBlock Text="总治疗：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TotalHeal}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Margin="10 2 0 2" Grid.Row="5" Grid.Column="1">
                                                                            <TextBlock Text="承受伤害：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TotalDamageTaken}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" Margin="20 2 0 2">
                                                                            <TextBlock Text="给敌方英雄造成总伤害：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.TotalDamageDealtToChampions}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" Margin="20 2 0 2">
                                                                            <TextBlock Text="给敌方英雄的物理伤害：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.PhysicalDamageDealtToChampions}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>

                                                                        <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.ColumnSpan="2" Margin="20 2 0 2">
                                                                            <TextBlock Text="给敌方英雄的魔法伤害：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.MagicDamageDealtToChampions}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.ColumnSpan="2" Margin="20 2 0 10">
                                                                            <TextBlock Text="伤害转化率：" FontSize="15" Foreground="#888888"></TextBlock>
                                                                            <TextBlock Text="{Binding Item2.Stats.DamageConvert}" FontSize="15" Foreground="Black"></TextBlock>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Grid>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </hc:Badge>
                                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                                                    <StackPanel.Resources>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Width" Value="30"></Setter>
                                                            <Setter Property="Height" Value="30"></Setter>
                                                            <Setter Property="Margin" Value="3 0"></Setter>
                                                        </Style>
                                                    </StackPanel.Resources>
                                                    <Grid Name="item0grid">
                                                        <Image Source="{Binding Item2.Stats.Item0Image}"></Image>
                                                        <Popup Focusable="False"
                                                               IsOpen="{Binding ElementName=item0grid,Path=IsMouseOver,Mode=OneWay}"
                                                               PlacementTarget="{Binding ElementName=item0grid}" 
                                                               Placement="Top" AllowsTransparency="True">
                                                            <Grid>
                                                                <Rectangle Fill="White" Margin="2" Opacity="0.8" RadiusY="2" RadiusX="2">
                                                                    <Rectangle.Effect>
                                                                        <DropShadowEffect Color="#eeeeee" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                                                    </Rectangle.Effect>
                                                                </Rectangle>
                                                                <StackPanel Margin="5" Orientation="Vertical">
                                                                    <TextBlock VerticalAlignment="Center" Text="{Binding Item2.Stats.Item0Model.Name}" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"></TextBlock>
                                                                    <TextBox Width="380" 
                                                                             IsReadOnly="True"
                                                                              AcceptsReturn="True"
                                                                              TextWrapping="Wrap"
                                                                             Text="{Binding Item2.Stats.Item0Model.Description,UpdateSourceTrigger=PropertyChanged}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                                                        <Path Data="{StaticResource money}" Fill="DarkGoldenrod" Stretch="Uniform" Height="20"/>
                                                                        <TextBlock Text="{Binding Item2.Stats.Item0Model.PriceTotal}" Margin="5 0 0 0" FontSize="16" FontWeight="Bold"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                    <Grid Name="item1grid">
