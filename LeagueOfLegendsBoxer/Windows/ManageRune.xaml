                                                                                </Rectangle.Effect>
                                                                            </Rectangle>
                                                                            <StackPanel Margin="5" Orientation="Vertical">
                                                                                <TextBlock VerticalAlignment="Center" Text="{Binding Main4Rune.Name}" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"></TextBlock>
                                                                                <TextBox Width="380" 
