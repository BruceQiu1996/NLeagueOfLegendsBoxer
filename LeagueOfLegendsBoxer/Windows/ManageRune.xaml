<Window x:Class="LeagueOfLegendsBoxer.Windows.ManageRune"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueOfLegendsBoxer.Windows"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="Arial"
        mc:Ignorable="d"
        Icon="/LeagueOfLegendsBoxer;component/Resources/logo.ico"
        Title="符文管理" Height="600" Width="1000">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadCommand}"></behaviors:InvokeCommandAction>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Grid>
        <Border Margin="5" Background="{DynamicResource DefaultBackgroundColor}" Opacity="0.98" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect Direction="0" ShadowDepth="0" BlurRadius="20" 
                                  Opacity="0.25" Color="#FF5B5B5B"></DropShadowEffect>
            </Border.Effect>
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="250"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="Transparent" MouseMove="Grid_MouseMove">
                <TextBlock Text="符文管理" FontSize="20" Margin="20 20 0 0" Foreground="{StaticResource PrimaryBrush}"></TextBlock>
                <Label HorizontalAlignment="Right" Height="35" Width="35" 
                       BorderThickness="0"
                       Margin="0 10 10 0" Background="Transparent" 
                       ToolTip="关闭" Cursor="Hand" MouseLeftButtonDown="Label_MouseLeftButtonDown">
                    <Path Data="{StaticResource CloseGeometry}" 
                          Fill="{StaticResource PrimaryBrush}" 
                          Stretch="Uniform" 
                          Stroke="{StaticResource PrimaryBrush}">

                    </Path>
                </Label>
            </Grid>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="20 0 0 0">
                <TextBlock Text="选择英雄" Foreground="{DynamicResource DefaultFontColor}" FontSize="18" VerticalAlignment="Center"></TextBlock>
                <ComboBox hc:TitleElement.Title="选择英雄" 
                          IsEditable="True"
                          Width="150"
                          Height="35"
                          IsReadOnly="False"
                          IsTextSearchEnabled="False"
                          IsDropDownOpen="{Binding ChooseHeroForOpen,UpdateSourceTrigger=PropertyChanged}"
                          FontSize="16"
                          Margin="10 2 0 0"
                          DisplayMemberPath="Label"
                          PreviewKeyUp="ComboBox_PreviewKeyUp"
                          Foreground="Black"
                          ItemsSource="{Binding ChooseHeros,UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding ChooseHero,UpdateSourceTrigger=PropertyChanged}"
                          Text="{Binding SearchChooseHeroText,UpdateSourceTrigger=PropertyChanged}">
                    <behaviors:Interaction.Triggers>
                        <behaviors:EventTrigger EventName="KeyUp">
                            <behaviors:InvokeCommandAction Command="{Binding SearchHeroCommand}"></behaviors:InvokeCommandAction>
                        </behaviors:EventTrigger>
                    </behaviors:Interaction.Triggers>
                </ComboBox>

                <TextBlock Text="选择模式" Margin="20 0 0 0" Foreground="{DynamicResource DefaultFontColor}" FontSize="18" VerticalAlignment="Center"></TextBlock>
                <ComboBox Width="150"
                          Height="35"
                          IsReadOnly="True"
                          FontSize="16"
                          Margin="10 2 0 0"
                          Foreground="Black"
                          ItemsSource="{Binding ChooseModes,UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding ChooseMode,UpdateSourceTrigger=PropertyChanged}">
                </ComboBox>
            </StackPanel>

            <GroupBox Grid.Row="2" Margin="10 5 5 10" Header="自定义符文" Style="{StaticResource GroupBoxOriginal}" 
                      Foreground="{DynamicResource DefaultFontColor}"
                      Background="{DynamicResource DefaultCardBackgroundColor}" FontSize="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ScrollViewer>
                        <ListBox ItemsSource="{Binding CustomerRunes.Item2,UpdateSourceTrigger=PropertyChanged}" 
                                 ScrollViewer.CanContentScroll="False"
                                 ScrollViewer.IsDeferredScrollingEnabled="True"
                                 PreviewMouseWheel="ListView_PreviewMouseWheel"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                    <Setter Property="Height" Value="160" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Border BorderThickness="0 0 0 0.3" 
                                                BorderBrush="{DynamicResource DefaultBorderColor}"
                                                Margin="1"
                                                Background="{TemplateBinding Background}">
                                                    <Grid Background="Transparent">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                                                            <StackPanel Orientation="Vertical">
                                                                <hc:Gravatar Style="{StaticResource GravatarCircle}" 
                                                                     Grid.Row="0" Grid.Column="0"
                                                                     Height="30" Width="30"
                                                                     Name="Main1Rune"
                                                                     Margin="5 5 5 0"
                                                                     Source="{Binding Main1Rune.Icon,UpdateSourceTrigger=PropertyChanged}">
                                                                    <Popup Focusable="False"
                                                                           IsOpen="{Binding ElementName=Main1Rune,Path=IsMouseOver,Mode=OneWay}"
                                                                           PlacementTarget="{Binding ElementName=Main1Rune}" 
                                                                           Placement="Top" AllowsTransparency="True">
                                                                        <Grid>
                                                                            <Rectangle Fill="White" Margin="2" Opacity="0.8" RadiusY="2" RadiusX="2">
                                                                                <Rectangle.Effect>
                                                                                    <DropShadowEffect Color="#eeeeee" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"></DropShadowEffect>
                                                                                </Rectangle.Effect>
                                                                            </Rectangle>
                                                                            <StackPanel Margin="5" Orientation="Vertical">
                                                                                <TextBlock VerticalAlignment="Center" Text="{Binding Main1Rune.Name}" FontWeight="Bold" FontSize="16" Margin="0 0 0 5"></TextBlock>
                                                                                <TextBox Width="380" 
                                                                                         IsReadOnly="True"
                                                                                         AcceptsReturn="True"
                                                                                         TextWrapping="Wrap"
                                                                                         Text="{Binding Main1Rune.Shortdesc,UpdateSourceTrigger=PropertyChanged}"/>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Popup>
                                                                </hc:Gravatar>

                                                                <hc:Gravatar Style="{StaticResource GravatarCircle}" 
                                                                     Grid.Row="0" Grid.Column="0"
                                                                     Height="30" Width="30"
                                                                     Name="Main2Rune"
                                                                     Margin="5 5 5 0"
                                                                     Source="{Binding Main2Rune.Icon,UpdateSourceTrigger=PropertyChanged}">
