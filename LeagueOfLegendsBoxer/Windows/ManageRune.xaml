                                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource DefaultFontColor}" 
                                                                   Margin="20 20 0 0" FontSize="16" ToolTip="{Binding Name}"
                                                                   Grid.Column="1" Grid.ColumnSpan="2"></TextBlock>
                                                        
                                                        <Grid Grid.Column="1">
                                                            <Button Content="删除"
                                                                    FontSize="15"
                                                                    ToolTip="直接删除"
                                                                    Command="{Binding DataContext.DeleteCustomerRuneCommandAsync,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
                                                                    CommandParameter="{Binding}"
                                                                    Cursor="Hand"
                                                                    Width="80"
                                                                    Style="{StaticResource ButtonDanger}"
                                                                    HorizontalAlignment="Left" Margin="20 100 0 0"/>
                                                        </Grid>

                                                        <Grid Grid.Column="2">
                                                            <CheckBox Content="自动应用" IsChecked="{Binding IsAutoApply}" Margin="0 100 0 0" Foreground="{StaticResource DefaultFontColor}" FontSize="14">
                                                                <behaviors:Interaction.Triggers>
                                                                    <behaviors:EventTrigger EventName="Checked">
                                                                        <behaviors:InvokeCommandAction Command="{Binding DataContext.AutoApplyCustomerCommandAsync,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"
